<%- include("../partials/layout-start", {title: title}) %>
<%- include("../partials/menu") %>
<h1><%= title %></h1>

<div class="row">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-body">

                <h5 class="card-title"><%= book.title %></h5>
                <p class="card-text">Просмотров: <%= counter %></p>
                <p class="card-text"><%= book.description %></p>
                <p class="card-text"><%= book.authors %></p>

                <div class="text-right">
                    <a class="btn btn-sm btn-primary" href="/books/update/<%= book.id %>">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                    <form action="/books/delete/<%= book.id %>" method="POST" class="d-inline">
                        <button class="btn btn-sm btn-danger">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </button>
                    </form>
                </div>

                <div>
                    <form id="form">
                        <div id="messages"></div>
                        <input id="input" required>
                        <button class="btn btn-green">Submit</button>
                    </form>
                    <script>
                        const form = document.getElementById('form');
                        const input = document.getElementById('input');
                        const button = document.getElementById('button');
                        const messages = document.getElementById('messages');
    
                        const roomName = location.pathname.split('/').pop();
                        const socket = io.connect('/', {query: `roomName=${roomName}`});
                        
                        socket.on('message-to-room', (msg) => {
                            const newMessage = document.createElement('div');
                            newMessage.textContent = msg;
                            messages.appendChild(newMessage);
                        });
    
                        form.addEventListener('submit', (e) => {
                            e.preventDefault();
                            const text = input.value;
                            socket.emit('message-to-room', text);
                            input.value = '';
                        });
                    </script>
                </div>

            </div>
        </div>
    </div>
</div>

<%- include("../partials/layout-end") %>
