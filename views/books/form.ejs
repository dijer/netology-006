<form method="POST" class="mt-5">
    <div class="form-group">
        <label for="inputTitle">Заголовок</label>
        <input type="text"
                value="<%= book.title %>"
                name="title"
                class="form-control"
                id="inputTitle">
    </div>

    <div class="form-group">
        <label for="inputDescription">Описание</label>
        <textarea
                rows="3"
                name="description"
                class="form-control"
                id="inputDescription"
        ><%= book.description %></textarea>
    </div>

    <div class="form-group">
        <label for="inputFileName">Авторы</label>
        <input type="text"
                value="<%= book.authors %>"
                name="authors"
                class="form-control"
                id="inputFileName">
    </div>

    <div class="form-group">
        <label for="inputFavorite">Любимая книга</label>
        <input type="text"
                value="<%= book.favorite %>"
                name="favorite"
                class="form-control"
                id="inputFavorite">
    </div>

    <div class="form-group">
        <label for="inputFileCover">Файл обложки</label>
        <input type="text"
                value="<%= book.fileCover %>"
                name="fileCover"
                class="form-control"
                id="inputFileCover">
    </div>

    <div class="form-group">
        <label for="inputFileName">Исходник книги</label>
        <input type="text"
                value="<%= book.fileName %>"
                name="fileName"
                class="form-control"
                id="inputFileName">
    </div>

    <div class="form-group">
        <label for="inputFileBook">Выгружаемый файл</label>
        <input type="text"
                value="<%= book.fileBook %>"
                name="fileBook"
                class="form-control"
                id="inputFileBook">
    </div>

    <div class="form-group text-right ">
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </div>
</form>
