{
  "compilerOptions": {
      "target": "es6",
      "lib": ["es6", "dom"],
      "types": ["reflect-metadata", "node"],
      "module": "commonjs",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "rootDir": "./src",
      "outDir": "./dist",
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*"]
      },
      "typeRoots": [
        "@types",
        "./node_modules/@types",
        "./src/index.d.ts",
      ],
      "strict": true
  },
  "exclude": [
    "node_modules"
  ],
  "files": ["./src/index.d.ts"]
}